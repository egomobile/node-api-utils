{
    "name": "@egomobile/api-utils",
    "version": "0.3.0",
    "description": "REST API extensions for extensions for @egomobile/http-server module, a very fast alternative to Express.js",
    "main": "lib/index.js",
    "engines": {
        "node": ">=12.0.0"
    },
    "scripts": {
        "build": "del ./lib && tsc",
        "docs:generate": "del ./docs && typedoc --out ./docs ./src",
        "lint": "eslint -c .eslintrc.js --ext .ts src",
        "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
        "sandbox": "nodemon --watch './sandbox.ts' --exec node -r ts-node/register --inspect=0.0.0.0:9229 ./sandbox.ts",
        "test": "jest --no-cache"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/*.test.ts"
        ],
        "setupFilesAfterEnv": [
            "./src/setupTests.ts"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/egomobile/node-api-utils.git"
    },
    "keywords": [
        "node",
        "http server",
        "tools",
        "helpers",
        "utils",
        "ego"
    ],
    "author": "Next.e.GO Mobile SE, Aachen, Germany",
    "license": "LGPL-3.0",
    "files": [
        "index.d.ts",
        "CHANGELOG.md",
        "LICENSE",
        "lib",
        "!lib/**/__tests__/**/*",
        "!lib/**/*.map",
        "!lib/**/setupTests.*",
        "README.md"
    ],
    "dependencies": {
        "@types/node": "12.20.37",
        "joi": "17.5.0"
    },
    "devDependencies": {
        "@egomobile/http-server": "^0.30.2",
        "@egomobile/tsconfig": "^5.0.0",
        "@types/jest": "27.0.3",
        "@types/supertest": "2.0.11",
        "babel-jest": "27.4.4",
        "del-cli": "4.0.1",
        "eslint": "7.32.0",
        "eslint-config-ego": "^0.15.0",
        "jest": "27.4.4",
        "nodemon": "2.0.15",
        "supertest": "6.1.6",
        "ts-jest": "27.1.1",
        "ts-node": "10.4.0",
        "tslint": "6.1.3",
        "typedoc": "0.22.10",
        "typescript": "4.5.4"
    },
    "peerDependencies": {
        "@egomobile/http-server": ">= 0.30.2"
    }
}
